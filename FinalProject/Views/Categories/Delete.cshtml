@model FinalProject.Models.Categories

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1>Are you sure you want to delete @Html.DisplayFor(model => model.CategoryName)?</h1>
    <div>
        <p>
            <strong>@Html.DisplayNameFor(model => model.CategoryName):</strong>
