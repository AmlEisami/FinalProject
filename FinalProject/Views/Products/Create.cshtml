@model FinalProject.Models.Products

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="title">Add Product</h1>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="ProductName" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="ProductName" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="Price" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Stock" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="Stock" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="Description" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Image" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="Image" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Video" class="col-sm-2 col-form-label control-label"></label>
            <input asp-for="Video" class="col-sm-9 col-form-label form-control" />
            <span asp-validation-for="Video" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Create" class="btn btn-success mt-2" />
        </div>
        <div>
            <a asp-action="Index" class="btn btn-primary mt-2">Go Back</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
